@page "/"

<PageTitle>Welcome to AHS Events</PageTitle>

@using SchoolEventWeb.Data
@inject EventService Service

<h1>Trojans Upcoming Events</h1>

<p>Participate or attend events and win prizes! There are lucky prizes too!</p>

@if (ahsevents == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Event</th>
                <th>Participation Points</th>
                <th>Attendance Points</th>
                <th>Date</th>
                <th>Type</th>
                <th>Description</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var ahsevent in ahsevents)
            {
                <tr>
                    <td>@ahsevent.Name</td>
                    <td>@ahsevent.ParticipationPoints</td>
                    <td>@ahsevent.AttendancePoints</td>
                    <td>@ahsevent.Time.ToShortDateString()</td>
                    <td>@ahsevent.Type</td>
                    <td>@ahsevent.Description</td>

                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<AhsEvent> ahsevents;

    protected override async Task OnInitializedAsync()
    {
        ahsevents = Service.GetUpcomingEvents();
    }
}