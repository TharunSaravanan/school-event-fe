@inherits LayoutComponentBase

<PageTitle>SchoolEventWeb</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <label hidden="@showLogin">@userName</label>
            <a href="login" hidden="@(!showLogin)">Login</a>
            <a href="logout" hidden="@showLogin">Logout</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {

    bool showLogin = true;
    string userName = "";

    public static MainLayout MainLayoutInstance = null;


    protected override void OnInitialized()
    {
        base.OnInitialized();
        MainLayoutInstance = this;
        ShowLogin();
    }

    public void ShowLogout(string name)
    {
        userName = name;
        showLogin = false;
        StateHasChanged();
    }

    public void ShowLogin()
    {
        showLogin = true;
        StateHasChanged();
    }


}
